<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    android:id="@+id/guillotine_body">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/guillotine_top">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layoutGalary"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_small_margin">

        <ImageButton
            android:id="@+id/buttonGalary"
            style="@style/ImageView.GuillotineItem"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="GALARY"
            android:id="@+id/ActivityGalary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAtlas"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:id="@+id/buttonAtlas"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="ATLAS"
            android:id="@+id/ActivityAtlas"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTaskToDo"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:id="@+id/buttonTaskToDo"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="TASK TO DO"
            android:id="@+id/ActivityTaskToDo"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/layoutPersonalize"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:id="@+id/buttonSettings"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="PERSONALIZE"
            android:id="@+id/ActivitySettings"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFavourites"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_small_margin">

        <ImageButton
            android:id="@+id/buttonFavourites"
            style="@style/ImageView.GuillotineItem"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_plus_white" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="FAVOURITES"
            android:id="@+id/ActivityFavourites"/>
    </LinearLayout>



</LinearLayout>